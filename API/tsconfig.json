{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "./bin",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./**/*.ts"
  ],
}
